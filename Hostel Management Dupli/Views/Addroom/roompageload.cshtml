@model Hostel_Management_Dupli.Models.Addroommodel

@{
    ViewBag.Title = "Add Room";
}

<style>
    .form-container {
        max-width: 500px;
        margin: 40px auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

        .form-container h2 {
            text-align: center;
            margin-bottom: 25px;
            font-weight: 600;
            color: #2c3e50;
        }

    .form-group label {
        font-weight: 600;
        margin-bottom: 5px;
        display: block;
        color: #34495e;
    }

    .form-control {
        height: 45px;
        border-radius: 8px;
        border: 1px solid #ccc;
        padding-left: 12px;
        font-size: 15px;
    }

    .btn-primary {
        width: 100%;
        height: 45px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
    }

    .msg-box {
        text-align: center;
        padding: 10px;
        border-radius: 5px;
        font-weight: bold;
        background: #daf7dc;
        color: #1b6b2a;
        margin-bottom: 20px;
    }
</style>


<div class="form-container">

    <h2>Add Room Details</h2>

    <!-- Display message -->
    @if (TempData["msg"] != null)
    {
        <div class="msg-box">
            @TempData["msg"]
        </div>
    }

    <form asp-action="AddRoomClick" asp-controller="AddRoom" method="post">

        <div class="form-group" style="margin-bottom: 15px;">
            <label>Rent</label>
            <input type="text" name="Rent" class="form-control" required />
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label>Sharing Type</label>
            <input type="text" name="Roomtype" class="form-control" required />
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <label>Occupied</label>
            <input type="text" name="Occupied" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Add Room</button>

    </form>
</div>
