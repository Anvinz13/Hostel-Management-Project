@model Hostel_Management_Dupli.Models.Logincls

<style>
    .login-container {
        max-width: 400px;
        margin: 60px auto;
        padding: 30px 35px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.12);
    }

        .login-container h2 {
            text-align: center;
            font-weight: 700;
            margin-bottom: 25px;
            color: #2c3e50;
            font-size: 26px;
        }

    .form-group {
        margin-bottom: 18px;
    }

    .control-label {
        font-weight: 600;
        color: #34495e;
        margin-bottom: 6px;
        display: block;
        font-size: 15px;
    }

    .form-control {
        height: 45px;
        border-radius: 8px;
        border: 1px solid #ccc;
        padding-left: 12px;
        font-size: 15px;
    }

    .btn-danger {
        width: 100%;
        height: 45px;
        margin-top: 5px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: bold;
        letter-spacing: 1px;
    }
</style>

<div class="login-container">
    <h2>Login</h2>

    <form asp-action="Login_Click" class="form-horizontal">
        <div class="form-group">
            <label class="control-label">Username</label>
            <input asp-for="Username" class="form-control" id="l1" />
        </div>

        <div class="form-group">
            <label class="control-label">Password</label>
            <input asp-for="Password" class="form-control" id="l2" type="password" />
        </div>

        <div class="form-group">
            <input type="submit" value="LOGIN" class="btn btn-danger" />
        </div>
    </form>
</div>

@{
    if (TempData["message"] != null)
    {
        <script>
            alert('@TempData["message"]');
            document.getElementById('l1').value = "";
            document.getElementById('l2').value = "";
        </script>
    }
}
