@model List<Hostel_Management_Dupli.Models.Requstcls>

<style>
    h2 {
        text-align: center;
        font-weight: 700;
        margin: 25px 0;
        color: #2c3e50;
    }

    .table-wrapper {
        max-width: 80%;
        margin: 0 auto;
    }

    table.table {
        background: #ffffff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.12);
        width: 100%;
        border-collapse: collapse;
    }

        table.table thead th {
            background: #2c3e50;
            color: #ffffff;
            text-align: center;
            font-weight: 600;
            padding: 14px;
            font-size: 15px;
        }

        table.table tbody td {
            padding: 12px;
            text-align: center;
            vertical-align: middle;
            font-size: 15px;
            color: #34495e;
        }

        table.table tbody tr:nth-child(even) {
            background: #f5f6f7;
        }
</style>

<h2>My Room Requests</h2>

<div class="table-wrapper">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Room Type</th>
                <th>Rent</th>
                <th>Status</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var req in Model)
            {
                <tr>
                    <td>@req.RoomType</td>
                    <td>@req.Rent</td>
                    <td>@req.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>
